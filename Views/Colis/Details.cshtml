@model SuiviLivraison.Models.Colis
@{
    ViewData["Title"] = "Détail du Colis";
}
<h2>Détail du Colis</h2>
<div>
    <dl class="row">
        <dt class="col-sm-2">Description</dt>
        <dd class="col-sm-10">@Model.Description</dd>
        <dt class="col-sm-2">Statut</dt>
        <dd class="col-sm-10">@Model.Statut</dd>
        <dt class="col-sm-2">Date d'envoi</dt>
        <dd class="col-sm-10">@Model.DateEnvoi</dd>
        <dt class="col-sm-2">Position</dt>
        <dd class="col-sm-10">@Model.Latitude, @Model.Longitude</dd>
    </dl>
</div>
@if (Model.Notifications != null && Model.Notifications.Any())
{
    <h4>Notifications</h4>
    <ul>
    @foreach (var notif in Model.Notifications)
    {
        <li>@notif.Message (@notif.DateEnvoi)</li>
    }
    </ul>
}
<a asp-action="MesColis" class="btn btn-secondary">Retour à la liste</a> 